{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./",
        "types": [
            "node"
        ]
    },
    "include": [
        "scripts/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests",
        "scripts/test-key-setup.ts",
        "scripts/test-testnet.ts",
        "scripts/verify-testnet-account.ts"
    ]
}